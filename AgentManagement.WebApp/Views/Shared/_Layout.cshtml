<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agent Management</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!--AngularJS setup-->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>

    <!--Plugin-->
    <script src="~/Scripts/toastr/angular-toastr.js"></script>
    <script src="~/Scripts/toastr/angular-toastr.tpls.js"></script>

    <!--AngularJs App-->
    <script src="~/Scripts/angular/app.js"></script>

    <!--AngularJs Services-->
    <script src="~/Scripts/angular/services/BasedApiUrlService.js"></script>
    <script src="~/Scripts/angular/services/CRUDService.js"></script>

    <!--AngularJs Controllers-->
    <script src="~/Scripts/angular/controllers/AgentController.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
